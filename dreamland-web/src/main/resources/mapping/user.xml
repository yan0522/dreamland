<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="yan.dreamland.www.dao.UserMapper">
    <select id="findByEmail" resultType="yan.dreamland.www.entity.User">
        select id, phone, nick_name, state from user where email = #{email}
    </select>

    <update id="update" parameterType="yan.dreamland.www.entity.User" >
        update dream_db.user set state = "1",enable="1" where id = #{id}
    </update>
</mapper>